extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    .main-products
        #content
            .row
                .col-sm-9
                    .row
                        .col-5.bg-light
                            .card 
                                .card-header
                                    img(src=`${product.thumbnail}`, alt='' style="width:200px")
                                    img(src=`${product.thumbnail}`, alt='' style="width:200px")

                                .card-body
                                    .card-title.text-success.text-title ĐẶC ĐIỂM NỔI BẬT
                                    .card-text.text-description !{product.content}
                            .card 
                                .card-body
                                    .card-title.text-title THÔNG TIN CHI TIẾT


                        .col-7.bg-light
                            .card
                                .card-body
                                    .single-item-body
                                        p.single-item-title.text-left(style='font-size: 30px;') #{product.title}
                                        p.single-item-price
                                            span.price-details #{product.price}$
                                            span.price-payment-details #{product.priceNew}$
                                    .clearfix
                                    .single-item-options
                                        form(
                                            action=`/cart/add/${product.id}`
                                            method ="POST"
                                        )
                                            label(for="quantity") Số lượng
                                            input(
                                                class="form-control"
                                                type="number"
                                                name="quantity"
                                                value="1"
                                                min="1"
                                                max= product.stock
                                            )
                                            button.btn.btn-success.mt-3 Thêm vào giỏ hàng
                                            button.btn.btn-danger.mt-3.ms-3 Mua ngay 
                                        .clearfix
                            .card.mt-3
                                .card-body
                                    .card-title.text-title MÔ TẢ SẢN PHẨM
                                    .card-text.text-description !{product.description}

                    .space50
                        | &nbsp;

                    .beta-products-list
                        h4 Sản phẩm tương tự
                        .row
                            .col-sm-4
                                .single-item
                                    .single-item-header
                                        a(href='product.html')
                                            img(src="https://cdn.dummyjson.com/products/images/mobile-accessories/Apple%20Airpods/thumbnail.png" width='270px' height='380px')
                                    .single-item-body
                                        p.single-item-title 100
                                        .single-item-price
                                            span


                .col-3.aside
                    .widget
                        h3.widget-title Sản phẩm nổi bật
                        .widget-body
                            .beta-sales.beta-lists
                                .media.beta-sales-item
                                    a.pull-left
                                        img(src="https://cdn.dummyjson.com/products/images/mobile-accessories/Apple%20Airpods/thumbnail.png" alt='')
                                    .media-body
                                        p.beta-sales-name
                                            p Airpode 12
                                        p.beta-sales-price   


