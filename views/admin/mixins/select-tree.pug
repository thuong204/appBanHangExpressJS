mixin select-tree(items, level=1, categoryProduct="", idCategoryProduct)
    each item in items 
        - let prefix = Array(level +1).join("-- ")
        option(
            value=item.id 
            selected=(item.id == categoryProduct ? true : false)
            ) !{prefix}#{item.title} 
            if item.children && item.children.length > 0
                +select-tree(item.children, level+1, categoryProduct)
