extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(3000)
    +alert-error(3000)
    .container.mt-5
      h2(class="text-danger") Chỉnh sửa sản phẩm
      form(
        action=`${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
      )
        div(class="mb-3")
          label(for="title") Tiêu đề
          input.form-control(
            type="text" 
            id="title" 
            name ="title" 
            value = product.title
            required)
        div(class="mb-3")
          label(for="description") Mô tả
          textarea.form-control(
            id ="desc" 
            name="description" 
            rows="5" 
            value = product.title)
        div(class="mb-3")
          label(for="price") Giá
          input.form-control(
            type="number"
            id="price" 
            name="price" 
            step="0.001"
            value= product.price)
        div(class="mb-3")
          label(for="mb-3") Phần trăm giảm giá
          input.form-control(
            type="number" 
            step="0.001"
            id="discount" 
            name="discountPercentage" 
            value= product.discountPercentage min=0
            placeholder="Nhập phần trăm giảm giá")
        div(class="mb-3")
          label(for="stock") Số lượng
          input.form-control(
            type="number" 
            id="quantity" 
            name="quantity" 
            value= product.quantity
            min="0" 
            placeholder="Nhập số lượng")
        div(class="mb-3" upload-image)
          label(for="thumbnail") Hình ảnh
          input.form-control(
            type="file" 
            id="thumbnail" 
            class="form-control-file"
            accept ="image/*"
            name="thumbnail" 
            value=""
            upload-image-input)
          img(
              src= product.thumbnail
              class="image-preview"
              upload-image-preview
            )
        div(class="mb-3")
          label(for="position") Vị trí
          input.form-control(
            name="position"
            type="number" 
            id="position" 
            value =  product.position
            min="1")
        div(class="mb-3 form-check form-check-inline" )
          input(
            type="radio" 
            class="form-check-input" 
            id="statusActive" 
            name="status" 
            checked = (product.status =="active" ? true : false)
            value="active")
          label(
            for="statusActive" 
            class="form-check-label") Hoạt động        
        div(class="mb-3 form-check form-check-inline" )
          input(
            type="radio" 
            class="form-check-input" 
            id="statusInActive" 
            name="status" 
            checked =(product.status =="inactive" ? true : false)
            value="inactive")
          label(
            for="statusInActive" 
            class="form-check-label") Dừng hoạt động

        div(class="mb-3")
            button.btn.btn-primary(type="submit") Lưu thông tin