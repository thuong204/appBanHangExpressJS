header.header 
    .container-fluid 
        .row.align-items-center
            .col-9
                h1 Admin
            .col-3
                .row 
                    .col-10
                        ul.navbar-nav.mt-1
                            .row
                                .col-6.text-end
                                    li.nav-item.dropdown.no-arrow.mx-1
                                        a.nav-link(href='#' id='alertsDropdown' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            i.fas.fa-bell.fa-fw
                                            span.badge.bg-danger.text-white.badge-counter 3

                                .col-6.text-start
                                    li.nav-item.dropdown.no-arrow.mx-1
                                        a.nav-link(href='#' id='messagesDropdown' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            i.fas.fa-envelope.fa-fw
                                        ul.dropdown-menu.dropdown-menu-end.shadow(aria-labelledby='messagesDropdown')

                    .col-2
                        .text-end.img-right
                            img#userAvatar(src=user.avatar, alt="User Avatar" data-bs-toggle="dropdown" aria-expanded="false")


                            .dropdown-menu.dropdown-menu-end(aria-labelledby="userAvatar")
                                a.dropdown-item(href=`${prefixAdmin}/my-account`) Thông tin cá nhân
                                a.dropdown-item(href="#") Cài đặt
                                a.dropdown-item(href=`${prefixAdmin}/auth/logout`) Đăng xuất


